<%- include header.ejs %>

<head>
    <link rel="stylesheet" href="/public/stylesheets/opportunity.css">
</head>
<div class="container opty-wrapper">
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div class="card card-wrapper shadow-sm mt-5 mb-5">
                <div class="card-body">
                    <div class="card-title" style="text-transform: capitalize;">
                        <h2><%= opportunity.title %></h2>
                    </div>

                    <div class="card-subtitle">
                        <h4 class="formargin"><%= opportunity.organisation %></h4>
                    </div>

                    <div class="card-subtitle">
                        <p><%= opportunity.type %></p>
                    </div>

                    <div class="card-text ">
                        <p>
                            <%- opportunity.description %>
                        </p>
                    </div>

                    <div class="row justify-content-center view-button">
                        <div class="col-12 d-flex">
                            <a href="<%= opportunity.applylink %>"><button type="button"
                                    class="btn btn-success">Apply</button></a>
                            <a href="/opportunities"><button type="button"
                                class="btn btn-primary ml-3">View All</button></a>    
                        </div>
                    </div>
                    <div class="card-subtitle posted-by-margin">
                        <span>posted by <a href="/users/<%= opportunity.username %>"><%= opportunity.username %></a> on <%=moment(opportunity.date).format('DD-MMM-YYYY') %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include footer.ejs %>