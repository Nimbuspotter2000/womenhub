<%- include header.ejs %>

<%- include banner.ejs %>
<style>
  @media only screen and (max-width: 600px) {
  img {
    width: 27vh;
    height: 27vh;
  }
}
</style>
<link rel="stylesheet" href="/public/stylesheets/index_inspire.css">
  <div class="container marketing">
  
    <!-- Three columns of text below the carousel -->
    <div class="inspire-heading">
      <h2>Opportunities</h2>
      <a class="btn btn-secondary main-button " href="/opportunities" role="button">View All &raquo;</a>
    </div>

    <div class="row">
      
      <div class="col-lg-4"> 
        <div class="contest-card">
          <h2><%- jobs[0].title.slice(0,30)%></h2>
          <p><%- jobs[0].description.slice(0,200)%></p>
          <p><a class="btn btn-secondary main-button " href="/opportunity/<%- jobs[0]._id%>" role="button">View details &raquo;</a></p>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="contest-card">
          <h2><%- jobs[1].title.slice(0,30)%></h2>
