          <h2><%- jobs[2].title.slice(0,30)%></h2>
          <p><%- jobs[2].description.slice(0,200)%></p>
          <p><a class="btn btn-secondary main-button " href="/opportunity/<%- jobs[2]._id%>" role="button">View details &raquo;</a></p>
        </div>
      </div>

    </div><!-- /.row -->


    <!-- START THE FEATURETTES -->


    <div class="inspire-heading">
