<head>
  <link rel="stylesheet" href="/public/stylesheets/index_inspire.css">
</head>

<%- include header.ejs %>
<style>
</style>
<div class="container mt-5 mb-5 pt-5 pb-5">
  <div class="row opportunities-card">



    <div class="col-md-10 order-md-2">
      <h1 class="featurette-heading mt-1 mb-5 "><%=contest.title %></h1>
      <p >
        <%-contest.summary %>
      </p>
      <div class="row justify-content-center view-button">
        <div class="col-12 d-flex mt-5 pt-5">
            <a href="<%= contest.applylink %>"><button type="button"
                    class="btn btn-success">Apply</button></a>
            <a href="/contests"><button type="button"
                class="btn btn-primary ml-3">View All</button></a>    
        </div>
      </div>
      <div class="card-subtitle posted-by-margin mt-3">
        <span>posted by <a href="/users/<%= contest.username %>"><%= contest.username %></a> on <%=moment(contest.date).format('DD-MMM-YYYY') %></span>
      </div>
    </div>

  </div>
</div>

<%- include footer.ejs %>