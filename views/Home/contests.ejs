<%- include header.ejs %>
<link rel="stylesheet" href="/public/stylesheets/index_inspire.css">

<div class="container">
  <div class="row contests-heading justify-content-center mt-5 mb-5">
        <div class= "col-sm-12">
            <h1>contests</h1>
        </div>
  </div>
  <div class="row">
    <% if(contests.length>0){ contests.forEach(contest=>{ %>
    <div class="col-lg-6">
      <div class="contest-card">
        <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg"
          aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" role="img" focusable="false">
          <title><%= contest.username %></title>
          <rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="#777" dy=".3em">140x140</text>
        </svg>
        <h2></h2>
        <p><%- contest.summary%></p>
        <p><a class="btn btn-secondary main-button" href="/contest/<%= contest._id %>" role="button">View details &raquo;</a></p>
      </div>
    </div>

    <% })} %>




  </div>
</div>

<%- include footer.ejs %>