<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

</head>
<%- include header.ejs %>

<style>
    .form-control {
        border-radius: 2rem;
    }

    .register {
        background: -webkit-linear-gradient(left, #fabea7, #fde1d6);

        padding: 3%;


    }

    .register-left {
        text-align: center;
        color: #fff;
        margin-top: 4%;
    }

    .register-left input {
        border: none;
        border-radius: 1.5rem;
        padding: 2%;
        width: 60%;
        background: #f8f9fa;
        font-weight: bold;
        color: #383d41;
        margin-top: 30%;
        margin-bottom: 3%;
        cursor: pointer;

    }

    .register-right {
        background: #f8f9fa;
        border-top-left-radius: 10% 50%;
        border-bottom-left-radius: 10% 50%;
    }

    .register-left img {
        margin-top: 15%;
        margin-bottom: 5%;
        width: 25%;
        -webkit-animation: mover 2s infinite alternate;
        animation: mover 1s infinite alternate;
    }

    @-webkit-keyframes mover {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(-20px);
        }
    }

    @keyframes mover {
        0% {
            transform: translateY(0);
        }

        100% {
            transform: translateY(-20px);
        }
    }

    .register-left p {
        font-weight: lighter;
        padding: 12%;
        margin-top: -9%;
    }

    .register .register-form {
        padding: 10%;
        margin-top: 10%;
    }

    .btnRegister {
        float: right;
        margin-top: 10%;
        border: none;
        border-radius: 1.5rem;
        padding: 2%;
        background: #6a197d;
        color: #fff;
        font-weight: 600;
        width: 50%;
        cursor: pointer;
    }

    .register .nav-tabs {
        margin-top: 3%;
        border: none;
        background: #6a197d;
        border-radius: 1.5rem;
        width: 28%;
        float: right;
    }

    .register .nav-tabs .nav-link {
        padding: 2%;
        height: 34px;
        font-weight: 600;
        color: #fff;
        border-top-right-radius: 1.5rem;
        border-bottom-right-radius: 1.5rem;
    }

    .register .nav-tabs .nav-link:hover {
        border: none;
    }

    .register .nav-tabs .nav-link.active {
        width: 100px;
        color: #6a197d;
        border: 2px solid #e0dede;
        border-top-left-radius: 1.5rem;
        border-bottom-left-radius: 1.5rem;
    }

    .register-heading {
        text-align: center;
        margin-top: 8%;
        margin-bottom: -15%;
        color: #495057;
    }
</style>




<div class="container-fluid register">

<div class="container register mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="WOMEN HUB" />
            <h3>Welcome</h3>
            <p>Educate a man and you educate an individual. Educate a woman and you educate a family.</p>


    <div class="container register mt-5 mb-5">

        <div class="row">
            <div class="col-md-3 register-left">
                <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="WOMEN HUB" />
                <h3>Welcome</h3>
                <p>Educate a man and you educate an individual. Educate a woman and you educate a family.</p>

            </div>
            <div class="col-md-9 register-right">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                            aria-controls="home" aria-selected="true">LOGIN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab"
                            aria-controls="profile" aria-selected="false">REGISTER</a>
                    </li>
                </ul>
                <form action="/login" method="post">

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <h3 class="register-heading">Sign In</h3>
                            <div class="row register-form justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Email Address *"
                                            name="email" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="password"
                                            placeholder="Password *" />
                                    </div>
                                    <div class="text">
                                        <a class="text-dark " href="#">Forgot password?</a></div>
                                    <div class="form-group ">
                                        <input type="submit" class="btn btn-lg  btn-block btnRegister" value="Login" />
                                    </div>



                                </div>

                            </div>
                        </div>

                </form>
                <div class="tab-pane fade show" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <form action="/register" method="POST">
                        <h3 class="register-heading">Sign Up</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder=" Name *" name="name" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="User Name *"
                                        onkeyup="checkusername();" name="username" id="username" />
                                </div>
                                <p id="alert-usernamee" class="msgalerts"></p>
                                <div class=" form-group">
                                    <input type="text" maxlength="10" minlength="10" class="form-control"
                                        placeholder="Phone no. *" name="mobileno" />
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Email Address *"
                                        onkeyup="checkemail()" name="email" id="email" />
                                </div>
                                <p id="alert-emaile" class="msgalerts"></p>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password *"
                                        name="password" />
                                </div>



                                <input type="submit" id="signupp" class="btnRegister" value="Register" />
                            </div>
                        </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</div>
</div>

<!--Modal: Login / Register Form-->
<script type="text/javascript">
    function checkusername() {
        data = {};
        data.username = document.getElementById("username").value;
        $.ajax({
            url: "/checkusername",
            method: "POST",
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (response) {
                console.log(response)
                if (response.message == "username already there") {
                    document.getElementById('alert-usernamee').innerHTML = "Sorry This username is already in use";
                    document.getElementById('signupp').className = "btn btn-block btn-danger halfcircle makedisable";


                } else {
                    document.getElementById('alert-usernamee').innerHTML = "";
                    document.getElementById('signupp').className = "btn btn-block btn-danger halfcircle";

                }
            }
        });
    }
</script>
<script type="text/javascript">
    function checkemail() {
        data = {};
        data.email = document.getElementById("email").value;
        $.ajax({
            url: "/checkemail",
            method: "POST",
            data: JSON.stringify(data),
            contentType: 'application/json',
            success: function (response) {
                console.log(response)
                if (response.message == "email already there") {
                    document.getElementById('alert-emaile').innerHTML = "Sorry This email is already in use";
                    document.getElementById('signupp').className = "btn btn-block btn-danger halfcircle makedisable";


                } else {
                    document.getElementById('alert-emaile').innerHTML = "";
                    document.getElementById('signupp').className = "btn btn-block btn-danger halfcircle";

                }
            }
        });
    }
</script>


