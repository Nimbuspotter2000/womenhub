<%- include header.ejs %>
<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>
<div class="container mt-2 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4>Write a New Blog</h4>
                </div>
                <div class="card-body">
                    <form action="/createblog" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="body" class="form-label">Body</label>
                            <textarea type="text" class="form-control" id="body" name="body" rows="15"
                                required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="title" class="form-label">Upload Blog Related Image</label>
                            <input type="file" class="form-control" id="image" name="file" required>
                        </div>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="" required> I have verified my content.
                        </label>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary ">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>CKEDITOR.replace('body');</script>
