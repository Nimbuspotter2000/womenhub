<%- include header.ejs %>
<script src="https://cdn.ckeditor.com/4.15.0/standard/ckeditor.js"></script>

<div class="container mt-2 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4>Post a new Contest/Challenge</h4>
                </div>
                <div class="card-body">
                    <form action="/createcontest" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Summary</label>
                            <textarea type="text" class="form-control" id="summary" name="summary" rows="15"
                                required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="applylink" class="form-label">Apply Link</label>
                            <input type="text" class="form-control" id="applylink" name="applylink" required>
                        </div>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="" required> I have verified the Contest.
                        </label>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary ">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-5 mb-5">
                <div class="card-header">
                    Contests posted by You
                </div>
                <div class="card-bod pt-3 pl-2 pr-2 pb-3">
                    <table id="table_id" class="display">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Published On</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <% if(contests.length>0){ contests.forEach(contest=>{ %>
                        <tbody>
                            <tr>
                                <td><a href="/contest/<%= contest._id %>"><%= contest.title %></a></td>
                                <td><%=moment(contest.date).format('DD-MMM-YYYY') %></td>
                                <td><a href="/contest/delete/<%= contest._id %>"><i class="fas fa-trash"></i></a></td>
                            </tr>
                        </tbody>
                        <% })} %>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
<script>CKEDITOR.replace('summary');</script>

<%- include footer.ejs %>