<%- include header.ejs %>

<div class="container mt-2 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h4>Profile</h4>
                </div>
                <div class="card-body">
                    <form action="/createcontest" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="<%= user.name%>" required >
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="<%= user.username%>" required readonly>
                        </div>
                        <div class="mb-3">
                            <label for="mobileno" class="form-label">Mobile Number</label>
                            <input type="number" class="form-control" id="mobileno" name="mobileno" placeholder="<%= user.mobileno%>" required readonly>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="<%= user.email%>" required readonly>
                        </div>
                        <div class="mb-3">
                            <label for="about" class="form-label">About</label>
                            <textarea type="text" class="form-control" id="about" name="about" rows="5" required ></textarea>
                        </div>
                        <!-- <div class="text-center">
                            <button type="submit" class="btn btn-primary ">Submit</button>
                        </div> -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include footer.ejs %>